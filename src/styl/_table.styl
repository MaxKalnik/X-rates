@import "_variable.styl"
.article-table
  position: relative
.table-overall
  width: 100%
  border-spacing: 0
  background: #44cdf9
  background-image: linear-gradient(90deg, #1C97ED 0%, #43CCF8 100%)
  border-radius: 5px 5px 0 0
  font-size 13px
  color: #475359
  font-weight 600

  th
    font-size: 11px
    color: #FFFFFF
    letter-spacing: 0
    line-height: 16px
    text-transform uppercase
    border-right 1px solid rgba(255, 255, 255, .2)
    vertical-align middle
    font-weight 600
    position: relative
    padding-right: 20px
    box-sizing: border-box
    &:first-child
      padding-right: 0
    &:last-child
      border-right none
    &:nth-child(2)
      text-align left
      padding-left: 32px
    &.head__title--city
      border-right-width 0

  thead
    tr
      background-color rgba(0, 0, 0, 0) !important
  th, td
    height: 50px
    text-align center
  td:nth-child(1)
    color: #859BA6

    font-weight 600
  td:nth-child(2)
    padding-left: 18px
    box-sizing: border-box
    text-align left
    width: 25.3%
    font-weight lighter
    font-size 14px
    b
      font-weight 600
      color: #575250
  td:nth-child(1)
    width: 4.4%
  td:nth-child(2)
    width: 30.1%
    font-weight: 600
    color: #475359
    padding-left: 32px


  tr:nth-child(even)
    background-color #F2F6F8
  tr:nth-child(odd)
    background-color #fff
  td
    color: #76706D
    border-bottom: 1px solid #e6eef2

  .countries__stats
    font-size: 14px
    line-height: 16px
    font-weight: 600
    &:before
      top: 0

.table_sort
  cursor: pointer

.overall__hint
  position: absolute
  width: 180px
  left: 52.2%
  top: -75px
  padding: 12px
  font-size: 12px
  line-height: 18px
  color: #475359
  background-color: #ffffff
  border-radius: 5px
  box-shadow: 0 20px 40px 0 rgba(0,0,0,0.1)
  z-index: 7
  cursor: pointer
  &:before
    content: ''
    position: absolute
    display: inline-block
    width: 12px
    height: 12px
    right: 8px
    top: 8px
    background-image: url(images/svg/icon-close-black.svg)
    background-repeat: no-repeat
    background-position: center
    cursor: pointer
  &:after
    content: ''
    position: absolute
    width: 0
    height: 0
    bottom: -8px
    right: 50%
    border-left: 6px solid transparent
    border-right: 6px solid transparent
    border-top: 8px solid #ffffff

.overall__hint--closed
  position: absolute

.table_sort
  position: relative
  &:before
    position: absolute
    right: 20px
    top: 15px
    display: block
    content: ''
    width: 0
    height: 0
    opacity: .7
    border-style: solid
    border-width: 0 5px 6px 5px
    border-color: transparent transparent rgba(255, 255, 255, 1) transparent
  &:after
    position: absolute
    right: 20px
    top: 25px
    width: 0
    height: 0
    opacity: .7
    content: ''
    border-style: solid
    border-width: 6px 5px 0 5px
    border-color: rgba(255, 255, 255, 1) transparent transparent transparent

  &.down
    &:after
      opacity 1
  &.top
    &:before
      opacity 1


.mobile-only-show, .mobile-only-close
  display: none

.table-title
  font-weight 600
  font-size: 34px
  color: #0A0B0C
  letter-spacing: 0
  line-height: 42px
  padding-bottom: 30px
  text-align center

.text-box.js-mob-insert
  border-radius: 5px

.table-overall__wrap
  position: relative

.table-short
  .table-overall__wrap
    height: 1070px
    overflow hidden
  .table_show__wrap
    display: block


.table_show__wrap
  display: none
  text-align center
  padding-top: 30px
  position: relative
  &:before
    height: 60px
    width: 100%
    position: absolute
    top: -60px
    display: block

    background-image: linear-gradient(-180deg, rgba(255,255,255,0.4) 0%, rgba(255,255,255,1) 100%)
    content: ''
